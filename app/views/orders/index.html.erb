<h1>Ordenes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to 'Show', client_order_path(order.client, order) %></td>
        <td><%= link_to 'Edit', edit_client_order_path(order.client, order) %></td>
